    ad:
      nameservers:
        - MUST_PROVIDE_LIST
      ldap_server: MUST_PROVIDE_VALUE
      ldap_bind_password:
      ldap_base_dn:
      ldap_access_filter:
      krb5_realm:
      krb5_kdc:
      krb5_admin_server:
      idmap_domain:
  ipa:
    sshfs_hostname: MUST_PROVIDE_VALUE
    sshfs_private_key: MUST_PROVIDE_VALUE
    sshfs_public_key: MUST_PROVIDE_VALUE
    ldap_uris: MUST_PROVIDE_LIST
    search_base: MUST_PROVIDE_VALUE
